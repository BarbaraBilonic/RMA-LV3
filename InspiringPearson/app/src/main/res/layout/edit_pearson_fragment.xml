<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_edit_pearson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="32sp"
        android:text="Edit Pearson"


        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_name_edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_pearson_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
             />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_date_birth_death_edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/til_pearson_name_edit">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_date_birth_death_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_description_edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/til_pearson_date_birth_death_edit"
        app:layout_constraintBottom_toTopOf="@id/til_pearson_quote_edit1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_description_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical"

            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_quote_edit1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/til_pearson_description_edit"
        app:layout_constraintBottom_toTopOf="@id/til_pearson_quote_edit2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_quote_edit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_quote_edit2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/til_pearson_quote_edit1"
        app:layout_constraintBottom_toTopOf="@id/til_pearson_imageURL_edit">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_quote_edit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pearson_imageURL_edit"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/til_pearson_quote_edit2"
        app:layout_constraintBottom_toTopOf="@id/btn_delete">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pearson_imageURL_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/til_pearson_imageURL_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin"
        android:text="@string/btn_delete_text"/>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/til_pearson_imageURL_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin"
        android:text="@string/btn_done_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>